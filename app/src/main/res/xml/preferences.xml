<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory android:title="@string/pref_header_advanced">

        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="show_system_apps"
            android:title="@string/pref_system_apps_title" />

        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:dependency="show_system_apps"
            android:key="advanced_system_app"
            android:title="@string/pref_advanced_system_apps_title" />

        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="show_disabled_apps"
            android:title="@string/pref_disabled_apps_title" />

        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:dependency="show_disabled_apps"
            android:key="advanced_disabled_app"
            android:title="@string/pref_advanced_disabled_apps_title" />

        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="advanced_not_exported"
            android:summary="@string/pref_advanced_not_exported_summary"
            android:title="@string/pref_advanced_not_exported_title" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/pref_header_appearance">

        <rikka.preference.SimpleMenuPreference
            android:defaultValue="-1"
            android:entries="@array/pref_appearance_theme_list_titles"
            android:entryValues="@array/pref_appearance_theme_list_values"
            android:key="appearance_theme"
            android:title="@string/pref_appearance_theme_title"
            app:useSimpleSummaryProvider="true" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>
